{
  "name": "ai-proposal-generator",
  "version": "1.0.0",
  "type": "module",
  "description": "Generate 2-page client-facing proposals from AI Process Audit reports",
  "main": "cli.js",
  "bin": {
    "ai-proposal": "./cli.js"
  },
  "scripts": {
    "generate": "node cli.js generate",
    "validate": "node cli.js validate",
    "test": "vitest run",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "test:e2e": "node test_run/run_pipeline_test.js",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "check": "npm run lint && npm run test:unit"
  },
  "keywords": [
    "proposal",
    "ai",
    "automation",
    "pdf",
    "audit"
  ],
  "author": "",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "commander": "^12.1.0",
    "dotenv": "^17.2.3",
    "mustache": "^4.2.0",
    "puppeteer": "^23.11.1",
    "uuid": "^10.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "vitest": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.56.0"
  }
}
